{% extends 'base.html.twig' %}

{% block title %}Saison numéro {{ season.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3 poster" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">Saison numéro :  {{ season.number }} de {{ program.title }}</h1>
            <p>Résumé de la saison : {{ season.description }}</p>
            <p>Année de sortie : {{ season.year }}</p>
            <p>Liste des épisodes</p>
            <ul>
                {% for episode in season.episodes %}
                    <li>
                        Episode {{ episode.number }} : {{ episode.title }}</br>

                        <p>Synopsis de l'épisode : {{ episode.synopsis }}</p>
                        <a href="{{ path('program_episode_show', {program_slug: program.slug, season_slug: season.slug, episode_id: episode.id})}}">Voir l'épisode</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}