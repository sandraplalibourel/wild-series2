{% extends 'base.html.twig' %}
{% block title %}Tous les programmes{% endblock %}
{% block body %}
    <body>
    <h1>Toutes les séries : </h1>
    {% for program in programs %}
        <div>
            <h2>{{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
        </body>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
{% endblock %}